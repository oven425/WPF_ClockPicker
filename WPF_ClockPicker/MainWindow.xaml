<Window x:Class="WPF_ClockPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ClockPicker"
        mc:Ignorable="d"
        xmlns:src="clr-namespace:WPF_ClockPicker" Background="Gray"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding SelectedTime, ElementName=clock_picker}"/>
        <src:QClockPicker Grid.Row="1" x:Name="clock_picker" Height="300" Width="300"/>
    </Grid>
</Window>
